{
  "Name": "el8",
  "Timeout": "20m",
  "Vars": {
    "gcs_path": {
      "Required": true
    },
    "repo_owner": {
      "Required": true
    },
    "repo_name": {
      "Required": true
    },
    "git_ref": {
      "Required": true
    },
    "version": {
      "Required": true
    },
    "build_dir": {
      "Required": true
    }
  },
  "Steps": {
    "build-package": {
      "Timeout": "20m",
      "SubWorkflow": {
        "Path": "./build_package.wf.json",
        "Vars": {
          "type": "rpm",
          "sourceImage": "projects/rocky-linux-cloud/global/images/family/rocky-linux-8-optimized-gcp-arm64",
          "gcs_path": "${gcs_path}",
          "repo_owner": "${repo_owner}",
          "repo_name": "${repo_name}",
          "git_ref": "${git_ref}",
          "build_dir": "${build_dir}",
          "machine_type": "t2a-standard-2",
          "zone": "us-central1-a",
          "version": "${version}"
        }
      }
    }
  }
}
