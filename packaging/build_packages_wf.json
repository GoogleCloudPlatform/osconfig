{
  "Name": "build-packages",
  "Sources": {
    "startup_deb.sh": "./daisy_startupscript_deb.sh",
    "startup_goo.sh": "./daisy_startupscript_goo.sh",
    "startup_rpm.sh": "./daisy_startupscript_rpm.sh",
    "common.sh": "./common.sh"
  },
  "Vars": {
    "base_repo": {
      "Value": "GoogleCloudPlatform",
      "Description": "Base GitHub repo"
    },
    "repo": {
      "Value": "osconfig",
      "Description": "Github Repository"
    },
    "pull_ref": {
      "Value": "master",
      "Description": "Branch against which agent need to build"
    }
  },
  "Steps": {
    "build-packages": {
      "CreateInstances": [
        {
          "disks": [
            {
              "source": "disk-deb-build"
            }
          ],
          "Metadata": {
            "base-repo": "${base_repo}",
            "repo": "${repo}",
            "pull-ref": "${pull_ref}"
          },
          "machineType": "n1-standard-2",
          "name": "inst-build-deb",
          "StartupScript": "startup_deb.sh",
	      "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"]
        },
        {
          "disks": [
            {
              "source": "disk-goo-build"
            }
          ],
          "Metadata": {
            "base-repo": "${base_repo}",
            "repo": "${repo}",
            "pull-ref": "${pull_ref}"
          },
          "machineType": "n1-standard-2",
          "name": "inst-build-goo",
          "StartupScript": "startup_goo.sh",
	      "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"]
        },
        {
          "disks": [
            {
              "source": "disk-el6-build"
            }
          ],
          "Metadata": {
            "base-repo": "${base_repo}",
            "repo": "${repo}",
            "pull-ref": "${pull_ref}"
          },
          "machineType": "n1-standard-2",
          "name": "inst-build-el6",
          "StartupScript": "startup_rpm.sh",
	      "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"]
        },
        {
          "disks": [
            {
              "source": "disk-el7-build"
            }
          ],
          "Metadata": {
            "base-repo": "${base_repo}",
            "repo": "${repo}",
            "pull-ref": "${pull_ref}"
          },
          "machineType": "n1-standard-2",
          "name": "inst-build-el7",
          "StartupScript": "startup_rpm.sh",
	      "Scopes": ["https://www.googleapis.com/auth/devstorage.read_write"]
        }
      ]
    },
    "setup-disks": {
      "CreateDisks": [
        {
          "name": "disk-deb-build",
          "sourceImage": "projects/debian-cloud/global/images/family/debian-9",
          "type": "pd-ssd"
        },
        {
          "name": "disk-goo-build",
          "sourceImage": "projects/debian-cloud/global/images/family/debian-9",
          "type": "pd-ssd"
        },
        {
          "name": "disk-el6-build",
          "sourceImage": "projects/centos-cloud/global/images/family/centos-6",
          "type": "pd-ssd"
        },
        {
          "name": "disk-el7-build",
          "sourceImage": "projects/centos-cloud/global/images/family/centos-7",
          "type": "pd-ssd"
        }
      ]
    },
    "wait-for-build": {
      "Timeout": "10m",
      "WaitForInstancesSignal": [
        {
          "Name": "inst-build-deb",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Package build success",
            "FailureMatch": "build failed",
            "StatusMatch": "build status"
          }
        },
        {
          "Name": "inst-build-goo",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Package build success",
            "FailureMatch": "build failed",
            "StatusMatch": "build status"
          }
        },
        {
          "Name": "inst-build-el6",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Package build success",
            "FailureMatch": "build failed",
            "StatusMatch": "build status"
          }
        },
        {
          "Name": "inst-build-el7",
          "SerialOutput": {
            "Port": 1,
            "SuccessMatch": "Package build success",
            "FailureMatch": "build failed",
            "StatusMatch": "build status"
          }
        }
      ]
    }
  },
  "Dependencies": {
    "build-packages": [
      "setup-disks"
    ],
    "wait-for-build": [
      "build-packages"
    ]
  }
}
